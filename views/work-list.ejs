<!DOCTYPE html>
<html lang="en">
<head>
    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Work list</title>
</head>

<body>
    <%- include("../public/partials/header.ejs") %>

    <div class="body-container">
        <div class="title-container ">
            <h1 class="font1 text-color">Work list</h1>
        </div>
    
        <div class="to-do-list-container">
            
            <!-- display the today to-do-list -->
            <% if(locals.workList){
                for(var i = 0; i < workList.length; i ++){    
            %>
                <div class="li-container container-color rounded responsive shadowed">             
                
                    <div class="checkbox-wrapper-61">
                        <input type="checkbox" class="check" onclick="strikethrough(<%= i %>)" id="check<%= i %>"/>
                        <label for="check<%= i %>" class="label">
                            <svg width="45" height="45" viewbox="0 0 95 95">
                                <rect x="30" y="20" width="50" height="50" stroke="black" fill="none" />
                                <g transform="translate(0,-952.36222)">
                                    <path d="m 56,963 c -102,122 6,9 7,9 17,-5 -66,69 -38,52 122,-77 -7,14 18,4 29,-11 45,-43 23,-4 " stroke="black" stroke-width="3" fill="none" class="path1" />
                                </g>
                            </svg>
                            <span class="font2 text-color heading-3" id="label<%=i%>"><%= workList[i] %></span>
                        </label>
                    </div>  
                </div> 
    
            <% }} %>
    
    
            <form action="submitwork" method="post">
                <textarea name="work-to-do"class="heading-3 font2 text-color
                note-container container-color rounded responsive shadowed"
                   id="work-to-do" cols="30" rows="10" placeholder="Write something..."></textarea>
       
               <button class="button-55 font2 heading-3" role="button" type="submit">+</button>
            </form>

            <%# include("../public/partials/footer.ejs") %>
    </div>
   
</body>
<script>
    function strikethrough(i){
        $("#label"+i).toggleClass("strike");
    } 

</script>
</html>